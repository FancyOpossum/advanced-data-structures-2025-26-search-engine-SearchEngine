@model SearchResults

@{
    ViewData["Title"] = "Search Results";
}

<div class="mt-5 container">
    <div class="mb-4 text-center">
        <div class="row align-items-center">
            <div class="col-2">
                <img src="/images/simpsons-logo.png" class="img-fluid my-3" />
            </div>
            <div class="col-8">
                <h3>Showing results for: <strong>@Model.Query</strong></h3>
                <small class="text-muted">Search completed in @Model.Duration.TotalMilliseconds ms</small>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            @if (Model.Results.Any())
            {
                <div class="list-group">
                    @foreach (var result in Model.Results)
                    {
                        <div class="list-group-item list-group-item-action mb-3 shadow-sm rounded">
                            <h5 class="mb-1 fw-bold text-primary">
                                @(result.EpisodeTitle ?? result.Filename)
                            </h5>
                            @if (!string.IsNullOrEmpty(result.Description))
                            {
                                <p class="text-muted mb-1">@result.Description</p>
                            }

                            <p class="mb-2">
                                @if (!string.IsNullOrEmpty(result.Snippet))
                                {
                                    @Html.Raw(result.Snippet)
                                }
                                else
                                {
                                    <small class="text-muted">No snippet available.</small>
                                }
                            </p>

                            <div class="d-flex justify-content-end">
                                <a asp-controller="Home"
                                   asp-action="ViewEpisode"
                                   asp-route-filename="@result.Filename"
                                   class="badge bg-primary rounded-pill text-decoration-none px-3 py-2">
                                    View
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No results found for <strong>@Model.Query</strong>.
                </div>
            }
        </div>
    </div>
</div>
